/* Typography utilities */

.h1 {
    font-size: 32px;
}

.h2 {
    font-size: 24px;
}

.h3 {
    font-size: 20px;
}

/* Popover */
.elements-popover {
    position: absolute;
    display: none;
}

.elements-popover.open {
    display: flex;
}

.elements-popover-backdrop {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: none;
}

.elements-popover-backdrop.open {
    display: flex;
}

/* Table */

.table {
    align-self: stretch;
}

.table-caption {
    padding: 8px 16px;
}

.table-head {
    padding: 8px 16px;
}

.table-body .table-row.last-child {
    border-bottom-width: 0;
}

.table-cell {
    padding: 8px 16px;
}

/* Context Menu Container */
.elements-context-menu {
    padding: 4px 0;
    min-width: 160px;
}

/* Menu Item */
.elements-menu-item {
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    padding: 8px 12px;
    margin: 0 4px;
    border-width: 0;
    height: auto;
}

.elements-menu-item > Image {
    width: 16px;
    height: 16px;
    margin-right: 8px;
    flex-shrink: 0;
}

.elements-menu-item > Label {
    flex-grow: 1;
    -unity-text-align: middle-left;
}

/* Menu Divider */
.elements-menu-divider {
    height: 1px;
    margin: 4px 12px;
}

/* Checkbox */
.elements-checkbox {
    flex-direction: row;
    align-items: center;
    margin: 0;
    padding: 0;
    flex-grow: 0;
    flex-shrink: 0;
}

.checkbox-box {
    width: 16px;
    height: 16px;
    align-items: center;
    justify-content: center;
}

.checkbox-check {
    display: none;
    margin: 0;
    padding: 0;
    margin-top: -0.7px;
}

.elements-checkbox.checked .checkbox-check {
    display: flex;
}

.checkbox-label {
    margin-left: 8px;
}
