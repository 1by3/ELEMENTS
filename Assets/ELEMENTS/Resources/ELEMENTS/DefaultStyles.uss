VisualElement,
Button,
Label {
    margin: 0;
    padding: 0;
}

TextField {
    padding: 0;
    margin: 0;
}

TextField TextInput {
    padding: 8px;
    height: auto;
}

Button {
    flex-direction: row;
    align-items: center;
    justify-content: center;
    padding: 8px 16px;
    height: auto;
}

Button Image {
    width: 16px;
    height: 16px;
    margin-right: 8px;
}

Button Image.rightIcon {
    margin-left: 8px;
    margin-right: 0;
}

Button.icon {
    padding: 8px;
    width: 34px;
}

Button.icon Image {
    margin-right: 0;
    margin-left: 0;
}

.tab-list .tab-item {
    border-width: 0;
    margin: 0 2px;
}

.tab-list .tab-item.first {
    margin-left: 0;
}

.tab-list .tab-item.last {
    margin-right: 0;
}

.elements-loader {
    width: 16px;
    height: 16px;
}

.elements-loader.large {
    width: 20px;
    height: 20px;
}

.elements-dialog {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    align-items: center;
    justify-content: center;
    display: none;
    visibility: hidden;
}

.elements-dialog.open {
    display: flex;
    visibility: visible;
}

.elements-dialog .elements-dialog-content {
    padding: 32px;
    max-width: 500px;
    width: 100%;
}

.elements-alert Button {
    width: 100%;
}

.elements-alert .title {
    margin-bottom: 8px;
}

.elements-alert .message {
    margin-bottom: 16px;
}

/* Gap utilities — direction-aware via child margins + ELEMENTS pseudo-classes */

