VisualElement {
    color: #0f172a;
}

VisualElement,
Button,
Label {
    margin: 0;
    padding: 0;
}

Label {
    white-space: normal;
    flex-wrap: wrap;
}

TextField {
    padding: 0;
    margin: 0;
}

.unity-text-field__placeholder > .unity-base-text-field__input {
    color: #94a3b8;
}

TextField TextInput {
    padding: 8px;
    border-radius: 8px;
    border-color: #e2e8f0;
    border-width: 1px;
    background-color: #ffffff;
    height: auto;
    transition-property: background-color, border-color, border-left-width, border-right-width, border-top-width, border-bottom-width;
    transition-duration: 0.2s;
}

TextField:focus TextInput {
    border-color: #64748b;
}

Button {
    flex-direction: row;
    align-items: center;
    justify-content: center;
    padding: 8px 16px;
    border-radius: 8px;
    border-color: #e2e8f0;
    border-width: 1px;
    background-color: #ffffff;
    height: auto;
    transition-property: background-color, border-color;
    transition-duration: 0.2s;
}

Button:hover {
    background-color: #f1f5f9;
}

Button.unity-disabled:hover {
    background-color: #ffffff;
}

Button Label {
}

Button Image {
    width: 16px;
    height: 16px;
    margin-right: 8px;
}

Button Image.rightIcon {
    margin-left: 8px;
    margin-right: 0;
}

Button.icon {
    padding: 8px;
    width: 34px;
}

Button.icon Image {
    margin-right: 0;
    margin-left: 0;
}

Button.ghost {
    background-color: rgba(255, 255, 255, 0);
    border-color: rgba(255, 255, 255, 0);
}

Button.ghost:hover {
    background-color: #f1f5f9;
}

Button.ghost.unity-disabled:hover {
    background-color: rgba(255, 255, 255, 0);
}

Button.pill {
    border-radius: 18px;
    background-color: #f1f5f9;
    border-color: #f1f5f9;
}

Button.pill:hover {
    background-color: #e2e8f0;
    border-color: #e2e8f0;
}

Button.pill.unity-disabled:hover {
    background-color: #f1f5f9;
    border-color: #f1f5f9;
}

Button.pill Label {
    color: #334155;
}

.tab-list .tab-item {
    border-width: 0;
    margin: 0 2px;
}

.tab-list .tab-item.first {
    margin-left: 0;
}

.tab-list .tab-item.last {
    margin-right: 0;
}

.elements-loader {
    width: 16px;
    height: 16px;
}

.elements-loader.large {
    width: 20px;
    height: 20px;
}

.elements-dialog {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0);
    align-items: center;
    justify-content: center;
    display: none;
    visibility: hidden;

    transition-property: background-color;
    transition-duration: 0.2s;
}

.elements-dialog.open {
    display: flex;
    visibility: visible;
    background-color: rgba(0, 0, 0, 0.35);
}

.elements-dialog .elements-dialog-content {
    background-color: #ffffff;
    border-radius: 16px;
    padding: 32px;
    max-width: 500px;
    width: 100%;

    opacity: 0;
    scale: 0.8;
    transition-property: scale, opacity;
    transition-duration: 0.2s;
    transition-delay: 0.2s;
}

.elements-dialog.open .elements-dialog-content {
    scale: 1;
    opacity: 1;
    transition-delay: 0s;
}

.elements-dialog.open .elements-dialog-content Button {
    width: 100%;
}

.elements-alert .title {
    font-size: 16px;
    -unity-font-style: bold;
    margin-bottom: 8px;
}

.elements-alert .message {
    margin-bottom: 16px;
    color: #64748b;
}

