/* Popover */
.elements-popover {
    position: absolute;
    display: none;
    opacity: 0;
    scale: 0.95;
    transition-property: opacity, scale;
    transition-duration: 0.15s;
    background-color: #ffffff;
    border-radius: 8px;
    border-width: 1px;
    border-color: #e2e8f0;
}

.elements-popover.open {
    display: flex;
    opacity: 1;
    scale: 1;
}

.elements-popover-backdrop {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: transparent;
    display: none;
}

.elements-popover-backdrop.open {
    display: flex;
}

/* Context Menu Container */
.elements-context-menu {
    padding: 4px 0;
    min-width: 160px;
}

/* Menu Item */
.elements-menu-item {
    flex-direction: row;
    align-items: center;
    padding: 8px 12px;
    margin: 0 4px;
    border-radius: 4px;
    height: auto;
    color: #0f172a;
    background-color: rgba(255, 255, 255, 0);
    transition-property: background-color;
    transition-duration: 0.1s;
}

.elements-menu-item:hover {
    background-color: #f1f5f9;
}

.elements-menu-item.unity-disabled {
    opacity: 0.5;
}

.elements-menu-item.unity-disabled:hover {
    background-color: rgba(255, 255, 255, 0);
}

.elements-menu-item > Image {
    width: 16px;
    height: 16px;
    margin-right: 8px;
    flex-shrink: 0;
}

.elements-menu-item > Label {
    color: #0f172a;
    flex-grow: 1;
}

/* Menu Divider */
.elements-menu-divider {
    height: 1px;
    background-color: #e2e8f0;
    margin: 4px 12px;
}
